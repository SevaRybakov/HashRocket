%html
	%head
		%title HashRocket
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		#top_bar
			#top_wrapper
				.left
					= link_to 'HashRocfd', :root
					%ul{:id => 'navbar'}
						%li
							%a{:id => 'friendship-link', :href => '#'}
								.notification-balloon +3
						%li
							%a{:id => 'settings-link', :href => '#'}
						%li
							%a{:id => 'logout-link', :href => '#'}
		#wrapper
			.left
			#content
				%h1{:class => 'person'} Seva Rybakov (it's you)
				#profile-info 
					%span{:class => 'gender-male'} Male
					%span{:class => 'city'} From Minsk
					%span{:class => 'birthday'} Celebrates birthday on 14.02.2011 
					%a{:href => '#'} Edit profile
						
